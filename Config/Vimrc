" Colorscheme 
" cf https://code.google.com/p/vimcolorschemetest/
syntax enable                  " enable the syntax highlight
set background=dark            " set a dark background
set t_Co=256                   " 256 colors for the terminal
"colorscheme evening            " my fav other one is 'evening'

" Do NOT mess with undo, seriously...
set undofile                " So is persistent undo ...
set undolevels=1000         " Maximum number of changes that can be undone
set undoreload=10000        " Maximum number lines to save for undo on a buffer reload

set nu
set encoding=utf-8
set termencoding=utf-8
"avoid the ^M or ^V bullsh*t
set fileformat=unix
set showmode

" That fuckin' backup.
set nobackup
set nowritebackup
set noswapfile    

" Tabs vs spaces
set expandtab                  " spaces instead of tabs
set tabstop=4                  " a tab = four spaces
set shiftwidth=4               " number of spaces for auto-indent
set softtabstop=4              " let backspace delete indent

"Vundle settings
" Install: $ git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
filetype off

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()
" " alternatively, pass a path where Vundle should install plugins
" "call vundle#begin('~/some/path/here')
"
" " let Vundle manage Vundle, required
Plugin 'VundleVim/Vundle.vim'
"
" " The following are examples of different formats supported.
" " Keep Plugin commands between vundle#begin/end.
call vundle#end()

filetype plugin on
syntax on

"Python (cf https://realpython.com/blog/python/vim-and-python-a-match-made-in-heaven/)
au BufNewFile,BufRead *.py:
    \ set tabstop=4
    \ set softtabstop=4
    \ set shiftwidth=4
    \ set expandtab
    \ set fileformat=unix
